<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_candidate_form" model="ir.ui.view">
        <field name="name">candidate.form</field>
        <field name="model">interview.candidate</field>
        <field name="arch" type="xml">
            <form string="Candidate">
                <header>
                    <button name="action_initial" type="object" string="Initial" class="btn-secondary"/>
                    <button name="action_qualification" type="object" string="Qualify" class="btn-primary"/>
                    <button name="action_examine" type="object" string="Examination" class="btn-warning"/>
                    <button name="action_selected" type="object" string="Selected" class="btn-success"/>
                    <button name="action_rejected" type="object" string="Rejected" class="btn-danger"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="initial,qualification,exam,selected,rejected"/>
                </header>
                <sheet>
                    <group>
                        <field name="photo" widget="image"/>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="degree"/>
                        <field name="skills_ids" widget="many2many_tags"/>
                        <field name="expected_salary"/>
                        <field name="experience_years"/>
                        <field name="summary"/>
                    </group>
                </sheet>
                <div class="o_attachment_preview"/>
                <div class="oe_chatter">
                    <chatter/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_candidate_list" model="ir.ui.view">
        <field name="name">candidate.list</field>
        <field name="model">interview.candidate</field>
        <field name="arch" type="xml">
            <list string="Candidates">

                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="degree"/>
                <field name="skills_ids"/>
                <field name="state"
                       decoration-success="state == 'selected'" widget="badge"/>
            </list>
        </field>
    </record>
    <record id="view_candidate_kanban" model="ir.ui.view">
        <field name="name">candidate.kanban</field>
        <field name="model">interview.candidate</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <field name="photo" widget="image"/>
                            <br/>
                            <strong>
                                <field name="name"/>
                            </strong>
                            <br/>
                            <field name="email"/>
                            <br/>
                            <field name="phone"/>
                            <br/>
                            <field name="degree"/>
                            <br/>
                            <field name="skills_ids"/>
                            <strong>
                            <field name="state"
                            decoration-success="state == 'selected'"
                            decoration-warning="state == 'rejected'"
                            decoration-primary="state == 'qualification'"
                            decoration-secondary="state == 'initial'"
                            decoration-danger="state == 'exam'" widget="badge"/>
                            </strong>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="view_candidate_search" model="ir.ui.view">
        <field name="name">interview.candidate.search</field>
        <field name="model">interview.candidate</field>
        <field name="arch" type="xml">
            <search string="Search Candidates">

                <field name="name"/>
                <field name="email"/>
                <field name="skills_ids"/>

                <filter string="Initial" name="state_initial" domain="[('state','=','initial')]"/>
                <filter string="Qualified" name="state_qualification" domain="[('state','=','qualification')]"/>
                <filter string="Examination" name="state_examination" domain="[('state','=','exam')]"/>
                <filter string="Selected" name="state_selected" domain="[('state','=','selected')]"/>
                <filter string="Rejected" name="state_rejected" domain="[('state','=','rejected')]"/>


                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Skills" name="group_skills" context="{'group_by':'skills_ids'}"/>
                </group>

            </search>
        </field>
    </record>
</odoo>


